{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.mdx",
    "src/**/*.d.ts",
    ".next/types/**/*.ts",
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "scripts/**/*.ts",
    "scripts/**/*.js"
  ],
  "exclude": ["node_modules"]
}
