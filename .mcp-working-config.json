{
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "filesystem": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "/home/robne/projects/active"]
    },
    "claude-flow": {
      "command": "npx",
      "args": ["claude-flow@alpha", "mcp", "start"]
    },
    "sqlite-tanium": {
      "command": "npx",
      "args": ["-y", "mcp-sqlite"],
      "env": {
        "SQLITE_DATABASE_PATH": "/home/robne/projects/active/tanium-tco/modern-tco/data/db/tanium_tco.db"
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "firecrawl": {
      "command": "npx",
      "args": ["-y", "firecrawl-mcp"],
      "env": {
        "FIRECRAWL_API_KEY": "fc-752485b3ef264377acd98f7f6f966dd1"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"],
      "env": {
        "DISPLAY": ":99",
        "PLAYWRIGHT_BROWSERS_PATH": "/home/robne/.cache/ms-playwright-new",
        "PLAYWRIGHT_SKIP_BROWSER_GC": "1",
        "PLAYWRIGHT_LAUNCH_OPTIONS_ARGS": "[\"--no-sandbox\", \"--disable-setuid-sandbox\", \"--disable-dev-shm-usage\", \"--disable-gpu\", \"--headless=new\"]",
        "PLAYWRIGHT_CHROMIUM_USE_HEADLESS_NEW": "1",
        "NODE_OPTIONS": "--max-old-space-size=4096"
      }
    }
  }
}