# Supabase Configuration Template for Modern TCO App
# Copy this file to .env.local and fill in your actual values

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anonymous Key (Public - safe to expose in frontend)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (Private - server-side only, never expose in frontend)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase Access Token (for CLI and MCP server operations)
SUPABASE_ACCESS_TOKEN=your_supabase_access_token

# Database Configuration
DATABASE_URL=postgresql://postgres.your_ref:your_password@aws-0-region.pooler.supabase.com:5432/postgres

# Local Supabase (if running supabase start locally)
SUPABASE_LOCAL_URL=http://localhost:54321
