{
  // Terminal configuration for PowerShell compatibility
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoExit"]
    },
    "Command Prompt": {
      "path": ["${env:windir}\\Sysnative\\cmd.exe", "${env:windir}\\System32\\cmd.exe"],
      "args": [],
      "icon": "terminal-cmd"
    }
  },
  "powershell.enableProfileLoading": false,
  "powershell.integratedConsole.showOnStartup": false,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "mdx"],
  "eslint.format.enable": true,
  "eslint.useFlatConfig": true,
  "prettier.requireConfig": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/.env.local": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.next": true,
    "**/dist": true
  },
  "emmet.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html"
  },
  "files.associations": {
    "*.mdx": "mdx"
  },
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
  "errorLens.messageTemplate": "$message - $source",
  "errorLens.delay": 200,
  "errorLens.onSave": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.completeFunctionCalls": true,

  // Enhanced TypeScript Development
  "typescript.preferences.organizeImports": true,
  "typescript.format.enable": true,
  "typescript.validate.enable": true,
  "typescript.reportStyleChecksAsWarnings": true,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,

  // Auto Save for Better Development Flow
  "files.autoSave": "onFocusChange",

  // Enhanced Code Actions
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },

  // File Explorer Enhancements
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.d.ts, ${capture}.js.map",
    "*.tsx": "${capture}.js, ${capture}.jsx",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    ".eslintrc.json": ".eslintignore, .eslintrc.*.json",
    "tsconfig.json": "tsconfig.*.json",
    ".env": ".env.*",
    "tailwind.config.*": "postcss.config.*"
  },

  // Problems Panel Configuration
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // Git Integration
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // Editor Enhancements
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  "editor.wordWrap": "on",
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "breadcrumbs.enabled": true,
  "breadcrumbs.showKeys": true,
  "breadcrumbs.showTypes": true,

  // Performance
  "files.watcherExclude": {
    "**/.next/**": true,
    "**/node_modules/**": true,
    "**/.git/**": true
  }
}
